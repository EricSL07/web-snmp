generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  login     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Switch {
  id        String   @id @default(cuid())
  hostname  String   @unique
  ipAddress String   @unique
  group     String
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
